{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "lib": ["dom", "es2017"],
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@types/react",
      "@types/lodash",
      "@types/styled-components",
      "@types/react-router-dom",
      "amis/lib"
    ],
    "typeRoots": ["./typings"]
  },
  "exclude": ["node_modules", "__tests__", "lib"]
}
