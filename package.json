{
  "private": true,
  "workspaces": [
    "packages/*",
    "website/docs/*",
    "website/example/",
    "packages/rt_cli/templates/*"
  ],
  "scripts": {
    "start:doc": "yarn workspace rt_docs start",
    "deploy:doc": "yarn workspace rt_docs deploy",
    "start:demo": "yarn workspace rt_example start",
    "build:demo": "yarn workspace rt_example deploy",
    "changelog": "lerna-changelog",
    "postinstall": "yarn tsc",
    "pretty": "prettier --loglevel warn --write --config .prettierrc \"*.{js,md,yml,json,yaml,css}\"\"",
    "lint:js": "eslint --cache \"**/*.js\" --fix",
    "lint:ts": "tslint \"**/*.{ts,tsx}\" --fix",
    "lint": "yarn lint:js && yarn lint:ts",
    "lerna": "lerna",
    "test": "jest",
    "tsc": "lerna run tsc --no-private"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.13",
    "@types/react-dev-utils": "^9.0.1",
    "@types/semver": "^6.2.0",
    "@types/shelljs": "^0.8.6",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-server": "^3.9.0",
    "@types/webpack-merge": "^4.1.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react-hooks": "^2.1.0",
    "typescript": "^3.8.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "*.{md,yml,json,yaml,css}": [
      "yarn pretty",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10.9.0"
  }
}
