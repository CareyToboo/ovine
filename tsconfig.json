{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@config": ["config/index"],
      "@constants/*": ["constants/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@widgets/*": ["widgets/*"],
      "@core/*": ["core/*"],
      "@hooks/*": ["hooks/*"],
      "@routes/*": ["routes/*"],
      "@assets/*": ["assets/*"]
    },
    "types": ["@types/react", "styled-components"],
    "typeRoots": ["./types"]
  },
  "compileOnSave": false,
  "exclude": ["./node_modules", "./coverage", "./document", "./dist", "__test__"]
}
