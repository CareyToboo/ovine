{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint:latest", "tslint-config-prettier", "tslint-react-hooks"],
  "rules": {
    "prettier": [true, null, { "editorconfig": false }],
    "no-implicit-dependencies": false,
    "object-literal-sort-keys": false,
    "no-namespace": false,
    "interface-over-type-literal": false,
    "react-hooks-nesting": false,
    "no-submodule-imports": false,
    "no-string-literal": false,
    "no-var-requires": false,
    "no-reference": false,
    "interface-name": false,
    "no-invalid-template-strings": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-first",
        "named-imports-order": "lowercase-first",
        "grouped-imports": true,
        "groups": [
          {
            "name": "third party modules",
            "match": "^[@a-z].*",
            "order": 10
          },
          {
            "name": "lib core modules",
            "match": "^[@a-z].*",
            "order": 20
          },
          {
            "name": "app modules",
            "match": "^~/.+",
            "order": 30
          },
          {
            "name": "superior folder modules",
            "match": "^\\.\\.",
            "order": 40
          },
          {
            "name": "curr folder modules",
            "match": "^\\.",
            "order": 50
          }
        ]
      }
    ]
  },
  "linterOptions": {
    "exclude": ["node_modules", "dist", "lib", "build", "backup"]
  }
}
