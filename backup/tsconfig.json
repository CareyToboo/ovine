{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@types/react",
      "@types/lodash",
      "@types/styled-components",
      "@types/react-router-dom",
      "amis/lib"
    ],
    "typeRoots": ["./typings"]
  },
  "compileOnSave": false,
  "include": ["./src", "./typings"],
  "exclude": ["node_modules", "coverage", "document", "dist", "__test__"]
}
